@page
@model DashboardModel
@{
    ViewData["Title"] = "EduGo - My Courses";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #0f172a;
            --sidebar: #1e293b;
            --card-bg: rgba(255, 255, 255, 0.05);
            --text: #f1f5f9;
            --accent: #6366f1;
            --border: rgba(255, 255, 255, 0.08);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            font-family: 'Inter', sans-serif;
            background-color: var(--bg);
            color: var(--text);
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: var(--sidebar);
            padding: 30px 20px;
            display: flex;
            flex-direction: column;
            transition: width 0.3s;
        }

        .sidebar.collapsed {
            width: 80px;
        }

        .logo img {
            width: 100%;
            max-width: 180px;
            margin-bottom: 20px;
        }

        .sidebar h2 {
            margin-bottom: 24px;
            color: var(--accent);
        }

        .nav a {
            color: var(--text);
            text-decoration: none;
            padding: 12px 0;
            display: block;
            font-weight: 600;
            transition: color 0.3s;
        }

        .nav a:hover,
        .nav a.active {
            color: var(--accent);
        }

        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 30px;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .topbar h1 {
            font-size: 28px;
            color: var(--accent);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-profile img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
        }

        .logout-btn {
            margin-left: 20px;
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            background-color: var(--accent);
            color: white;
            cursor: pointer;
            transition: background 0.3s;
        }

        .logout-btn:hover {
            background-color: #4f46e5;
        }

        .arrow-2 {
            width: 20px;
            height: 20px;
            cursor: pointer;
            margin-right: 16px;
        }

        .arrow-2-top,
        .arrow-2-bottom {
            width: 100%;
            height: 3px;
            background-color: var(--text);
            margin: 4px 0;
            transition: all 0.3s;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 24px;
        }

        .card {
            background-color: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            min-height: 160px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(12px);
            color: white;
            transition: transform 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            text-shadow: 0 1px 4px rgba(0,0,0,0.4);
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card h2 {
            font-size: 20px;
            margin-bottom: 4px;
        }

        .card p {
            font-size: 14px;
            color: #e2e8f0;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/en/thumb/d/d0/WSIiZ_logo.svg/220px-WSIiZ_logo.svg.png" alt="EduGo Logo">
        </div>
        <h2>EduGo</h2>
        <nav class="nav">
            @foreach (var nav in Model.Navigation)
            {
                <a href="@nav.Url" class="@(nav.Key == "myCourses" ? "active" : "")">@nav.Label</a>
            }
        </nav>
    </div>

    <div class="main">
        <div class="topbar">
            <div id="toggleSidebar" class="arrow-2">
                <div class="arrow-2-top"></div>
                <div class="arrow-2-bottom"></div>
            </div>
            <h1>My Courses</h1>
            <div class="right">
                <div class="user-profile">
                    <img src="https://img.lovepik.com/png/20231031/Avatar-user-interface-abstract-user-login-icon-logo-Login-icon_430106_wh860.png" alt="User" />
                    <span>@Model.UserName</span>
                </div>
                <button class="logout-btn" onclick="logout()">Logout</button>
            </div>
        </div>

        <div class="grid">
            @foreach (var course in Model.Courses)
            {
                <a href="/Course?id=@course.Id" style="text-decoration:none;">
                    <div class="card" style="background: url('@course.Image'); background-size: cover; color: rgb(247, 247, 247)">
                        <h2>@course.Title</h2>
                        <p>@course.Code</p>
                    </div>
                </a>
            }
        </div>
    </div>

    <script>
        function logout() {
            alert("You have been logged out.");
            sessionStorage.clear();
            localStorage.clear();
            window.location.href = '/Index';
        }

        const toggleBtn = document.getElementById("toggleSidebar");
        const sidebar = document.querySelector(".sidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
        });
    </script>
</body>
</html>