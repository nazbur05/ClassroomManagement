@page
@model AddMaterialModel
@{
    ViewData["Title"] = "Add Material";
}

<a href="/Course?id=@Model.CourseId" class="btn btn-secondary mb-3">&larr; Back to Course</a>

<h1>Add Material</h1>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CourseId" />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Content"></label>
        <textarea asp-for="Content"></textarea>
    </div>
    <div>
        <label for="Uploads">Upload Files (optional):</label>
        <input type="file" id="Uploads" name="Uploads" multiple />
    </div>
    <button type="submit">Add</button>
</form>